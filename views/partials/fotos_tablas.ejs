<main class="col-md-8 ms-sm-auto col-lg-10 px-md-4">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-5">
                        <h2>Fotos</h2>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Descripción</th>
                        <th>URL</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (typeof arrFotos !=='undefined' && Array.isArray(arrFotos) && arrFotos.length> 0) { %>
                        <% arrFotos.forEach((foto, idx)=> { %>
                            <tr>
                                <td>
                                    <%= idx + 1 %>
                                </td>
                                <td>
                                    <%= foto.descripcion || 'No descripción' %>
                                </td>
                                <td>
                                    <% if (foto.ruta) { %>
                                        <%= foto.ruta %>
                                            <% } else { %>
                                                No imagen
                                                <% } %>
                                </td>
                                <td>
                                    <a href="#" class="settings" title="Settings" data-toggle="tooltip">
                                        <i class="material-icons">&#xE8B8;</i>
                                    </a>
                                    <a href="#" class="delete" title="Delete" data-toggle="tooltip">
                                        <i class="material-icons">&#xE5C9;</i>
                                    </a>
                                </td>
                            </tr>
                            <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="4" class="text-center">No hay fotos disponibles</td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>
        <div class="clearfix">
            <div class="hint-text">Showing <b>10</b> out of <b>10</b>
                <ul class="pagination">
                    <li class="page-item"><a href="#" class="page-link">Previous</a></li>
                    <li class="page-item active"><a href="#" class="page-link">1</a></li>
                    <li class="page-item"><a href="#" class="page-link">2</a></li>
                    <li class="page-item"><a href="#" class="page-link">3</a></li>
                    <li class="page-item"><a href="#" class="page-link">4</a></li>
                    <li class="page-item"><a href="#" class="page-link">5</a></li>
                    <li class="page-item"><a href="#" class="page-link">Next</a></li>
                </ul>
            </div>
        </div>
        <div class="col-sm-7">
            <a href="#" class="btn btn-secondary"><i class="material-icons">&#xE147;</i> <span>Add New Photo</span></a>
            <a href="#" class="btn btn-secondary"><i class="material-icons">&#xE24D;</i> <span>Export to Excel</span></a>
        </div>
    </div>
</main>